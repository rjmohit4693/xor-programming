<project default="javadoc" >

    <property
        name="title"
        value="Xor Programming API" />

    <property
        name="sdk.version"
        value="19" />

    <property
        name="sdk.path"
        value="C:\Users\Steven\AppData\Local\Android\android-sdk" />

    <target name="javadoc" >

        <javadoc
            access="protected"
            author="true"
            classpath="${sdk.path}\platforms\android-${sdk.version}\android.jar"
            destdir="../Javadoc"
            doctitle="${title}"
            linkoffline="//d.android.com/reference ${sdk.path}\docs\reference"
            nodeprecated="false"
            nodeprecatedlist="true"
            nohelp="true"
            noindex="false"
            nonavbar="false"
            notree="false"
            packagenames="com.xorprogramming.*"
            sourcepath="gen:src"
            splitindex="true"
        	source="1.5"
            use="false"
            version="true"
            windowtitle="${title}" />
    </target>

</project>